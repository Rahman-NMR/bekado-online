<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    filled-->
    <style name="materialbutton" parent="">
        <item name="android:layout_gravity">center</item>
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">99dp</item>
    </style>

    <style name="materialbutton.red" parent="materialbutton">
        <item name="materialThemeOverlay">@style/color.red</item>
    </style>

    <!--    outlined-->
    <style name="materialOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">99dp</item>
    </style>

    <style name="materialOutlinedButton.red" parent="materialOutlinedButton">
        <item name="materialThemeOverlay">@style/color.red</item>
    </style>

    <!--    text only-->
    <style name="materialbutton.text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">99dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="materialbutton.text.red" parent="materialbutton.text">
        <item name="materialThemeOverlay">@style/color.red</item>
    </style>

    <style name="materialTextListButtonIcon" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="iconPadding">16dp</item>
        <item name="iconSize">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="materialTextListButtonIcon.grey" parent="materialTextListButtonIcon">
        <item name="materialThemeOverlay">@style/color.grey</item>
    </style>

    <!--    icon only-->
    <style name="iconOnly.outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="iconOnly.outlined.red" parent="iconOnly.outlined">
        <item name="materialThemeOverlay">@style/color.red</item>
    </style>

    <style name="iconOnly.button" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="iconOnly.button32" parent="iconOnly.button">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
    </style>

    <style name="iconOnly" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="iconOnly.red" parent="iconOnly">
        <item name="materialThemeOverlay">@style/color.red</item>
    </style>

    <!--    color-->
    <style name="color.secondary" parent="">
        <item name="colorPrimary">@color/teal_700</item>
    </style>

    <style name="color.grey" parent="">
        <item name="colorPrimary">@color/grey_700</item>
    </style>

    <style name="color.red" parent="">
        <item name="colorPrimary">@color/error</item>
    </style>
</resources>