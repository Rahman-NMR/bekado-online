<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="materialbutton" parent="Theme.BekadoOnline">
        <item name="android:layout_gravity">center</item>
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">99dp</item>
    </style>

    <style name="materialOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">99dp</item>
    </style>

    <!--    text only-->
    <style name="materialbutton.text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">99dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <!--    icon only-->
    <style name="Widget.App.Button.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
</resources>